<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="INFO" strict="true" name="XMLConfigTest" xmlns="http://logging.apache.org/log4j/2.0/config">

    <Properties>
        <Property name="filename">Log-test.log</Property>
        <Property name="defaultPattern">%d{dd MMM yyyy HH:mm} [%t] %-5level%c{1}.%M - %m%n</Property>
        <Property name="shortPattern">%d{HH:mm:ss} [%t] %-5level- %m%n</Property>
    </Properties>

    <Appenders>

        <Appender type="RollingFile" name="RollingFile" fileName="${filename}">
            <Layout type="PatternLayout" pattern="${defaultPattern}"/>
        </Appender>

        <Appender type="Console" name="Console">
            <Layout type="PatternLayout" pattern="${shortPattern}"/>
        </Appender>

        <Appender type="File" name="File" fileName="${filename}">
            <Layout type="PatternLayout" pattern="${defaultPattern}"/>
        </Appender>

    </Appenders>

    <Loggers>

        <Root level="INFO">
            <AppenderRef ref="File"/>
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>
</Configuration>